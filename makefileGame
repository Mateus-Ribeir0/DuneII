# Nome do executável
TARGET = novojogo

# Compilador e flags
CC = gcc
CFLAGS = -Wall

# Diretório atual e caminho do arquivo principal
CURDIR := $(shell pwd)
SOURCE = $(CURDIR)/novojogo.c

# Bibliotecas necessárias
LIBS = -lraylib -lGL -lm -lpthread -ldl -lrt -lX11

# Regra para gerar o executável
$(TARGET): $(SOURCE)
	$(CC) $(CFLAGS) $(SOURCE) -Iinclude -o $(TARGET) $(LIBS)

# Limpeza dos arquivos temporários
clean:
	rm -f $(TARGET)
