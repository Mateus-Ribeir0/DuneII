# Nome do execut치vel
TARGET = vendedor

# Compilador e flags
CC = gcc
CFLAGS = -Wall

# Lista de arquivos .c e .h
SOURCES = $(wildcard src/*.c)
HEADERS = $(wildcard include/*.h)

# Bibliotecas necess치rias
LIBS = -lraylib -lGL -lm -lpthread -ldl -lrt -lX11

# Regra para gerar o execut치vel
$(TARGET): $(SOURCES) $(HEADERS)
	$(CC) $(CFLAGS) $(SOURCES) -Iinclude -o $(TARGET) $(LIBS)

# Limpeza dos arquivos tempor치rios
clean:
	rm -f $(TARGET) src/*.o

